  "$schema": "./node_modules/nx/schemas/project-schema.json",
  "sourceRoot": ".",
  "targets": {
    "build": {},
    "build-vite": {},
    "serve": {},
    "preview": {},
    "test": {
      "options": {
        "reportsDirectory": "../coverage"
      }
    },
    "lint": {},
    "eslint": {},
    "stylelint": {},
    "typecheck": {},
